@model PessoaFisica.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<section class="content" style="margin:16px;">
    <div class="container-fluid">
                <div class="card card-light">
                    <div class="card-header">
                        <h3 class="card-title">Detalhes do Usuário</h3>
                    </div>
                        <div class="card-body">
                            <div >
                                @Model.Username
                            </div>
                            <div >
                                 @Model.Email
                            </div>
                            <div >
                                @Model.Telefone
                            </div>
                        </div>             
                </div>
            

    <div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">Pessoas Cadastradas</h3>
    </div>
    <div class="card-body">
        <table class="table" id="tabela">
            <thead>
                <tr class="text-lg">
                    <th style="width: 20%">
                        Nome
                    </th>
                    <th style="width: 80%">
                        Sobrenome
                    </th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var pessoa in Model.ListaDePessoas)
                    {
                             <tr>
                                      <td>@pessoa.Nome</td>
                                      <td>@pessoa.Sobrenome</td>
                              </tr>
                    }
            </tbody>
        </table>
    </div>
        <div class="card-footer">
            <a class="btn btn-success" href="@Url.Action("Create", "Pessoas", new { id = Model.Id })">Adicionar Nova Pessoa</a>
        </div>
    </div>
  </div>
</section>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }